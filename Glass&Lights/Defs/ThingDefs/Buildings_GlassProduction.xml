<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>GlassworkTable</defName>
		<Label>glassworks</Label>
		<ThingClass>Building_WorkTable</ThingClass>
		<Description>A table with all the tools you need to make glass.</Description>
		<graphicData>
			<texPath>Things/Building/Production/GlassworkTable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<CostList>
				<Steel>60</Steel>
		</CostList>
		<AltitudeLayer>Waist</AltitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToMake>1300</WorkToMake>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<Size>(2,1)</Size>
		<surfaceType>Item</surfaceType>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeGlass</li>
			<li>MakeCircularGlass</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>200</basePowerConsumption>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
			</li>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>2</glowRadius>
				<glowColor>(217,112,33,0)</glowColor>
			</li>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<researchPrerequisite>GlassworksResearch</researchPrerequisite>
	</ThingDef>
  
  	<ThingDef ParentName="BuildingBase">
		<defName>ReinforcedGlassworkTable</defName>
		<Label>reinforced glassworks</Label>
		<ThingClass>Building_WorkTable</ThingClass>
		<Description>A table used for turning normal glass into safety glass.</Description>
		<graphicData>
			<texPath>Things/Building/Production/ReinforcedGlassworkTable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<CostList>
				<Steel>20</Steel>
		</CostList>
		<AltitudeLayer>Waist</AltitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToMake>900</WorkToMake>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<Size>(1,1)</Size>
		<surfaceType>Item</surfaceType>
		<DesignationCategory>Production</DesignationCategory>
		<Passability>PassThroughOnly</Passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>MakeReinforcedGlass</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>50</basePowerConsumption>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
			</li>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<researchPrerequisite>ReinforcedGlassResearch</researchPrerequisite>
	</ThingDef>

</ThingDefs>